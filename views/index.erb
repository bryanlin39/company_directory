<h1>Home Page</h1>

<h3>All Divisions</h3>
<ul>
<% @divisions.each do |division| %>
  <li><a href="/divisions/<%= division.id %>"><%= division.name %></a></li>
<% end %>
</ul>

<h3>Add a New Division</h3>
<form action="/" method="post">
  <div class="form-group">
    <label for="div_name">Division Name</label>
    <input type="text" name="div_name">
  </div>
  <button type="submit" name="button">Add</button>
</form>

